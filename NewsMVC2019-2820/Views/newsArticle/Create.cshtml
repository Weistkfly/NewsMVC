@model NewsMVC2019_2820.Models.ViewModels.NewsVM
<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add article</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="News.Title"></label>
                        <input asp-for="News.Title" class="form-control" />
                        <span asp-validation-for="News.Title" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="News.Author"></label>
                        <select asp-for="News.AuthorId" asp-items="@Model.AuthorDropDown" class="form-control">
                            <option selected>--Select Expense Type--</option>
                        </select>
                        <span asp-validation-for="News.AuthorId" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="News.CategoryId"></label>
                        <input asp-for="News.CategoryId" class="form-control" />
                        <span asp-validation-for="News.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="News.Content"></label>
                        <textarea asp-for="News.Content" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="News.Content" class="text-danger"></span>
                    </div>
                    <div class="mt-2">
                        <input type="submit" class="btn btn-info w-25" value="Create" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}