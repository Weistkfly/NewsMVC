@model News
<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete article</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Title"></label>
                        <input asp-for="Title"  disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label asp-for="Content"></label>
                        <textarea asp-for="Content" disabled class="form-control" rows="4"></textarea>
                    </div>
                    <div class="mt-2">
                        <input type="submit" class="btn btn-danger w-25" value="Delete" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
