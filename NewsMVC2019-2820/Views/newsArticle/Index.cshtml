@model IEnumerable<News> 

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">News articles</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="newsArticle" asp-action="Create" class="btn btn-primary">Create new article</a> 
        </div>
    </div>
    <br />

    @if(Model.Count() > 0)
     {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Date</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var news in Model)
                {
                    <tr>
                        <td>@news.Title</td>
                        <td>@news.Author</td>
                        <td>@news.Date.ToShortDateString()</td>
                        <td>
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="newsArticle" asp-action="Update" asp-route-Id="@news.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="newsArticle" asp-action="Delete" asp-route-Id="@news.Id" class="btn btn-danger mx-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     }
     else 
    { 
       <p>No news added yet</p>
    }


</div>